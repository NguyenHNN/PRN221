<Window x:Class="DAY2_Webcam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAY2_Webcam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="208*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Height="30" Margin="120,332,0,0" VerticalAlignment="Top" Width="43" Click="Button_StartClick" Grid.Row="1"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Height="30" Margin="207,332,0,0" VerticalAlignment="Top" Width="48" Grid.Row="1" Click="btnStop_Click"/>
        <Button x:Name="btnCapture" Content="Capture" HorizontalAlignment="Left" Height="30" Margin="439,332,0,0" VerticalAlignment="Top" Width="48" Grid.Row="1" Click="btnCapture_Click"/>
        <Image x:Name="picturebox" HorizontalAlignment="Left" Height="279" Margin="37,29,0,0" VerticalAlignment="Top" Width="707" Grid.Row="1"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Height="30" Margin="309,332,0,0" Grid.Row="1" VerticalAlignment="Top" Width="53"/>
    </Grid>
</Window>
